{
  "name": "singer-website",
  "version": "1.0.0",
  "description": "Professional website for a local singer - weddings, events, workshops, and vocal coaching",
  "private": true,
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3002",
    "dev:safe": "node scripts/preflight.mjs && next dev -H 0.0.0.0 -p 3002",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 3002",
    "preflight": "node scripts/preflight.mjs",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 100",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "security-check": "npm audit --audit-level=moderate",
    "import:photos": "node scripts/import-photos.mjs",
    "check:vercel": "node scripts/vercel-preflight.mjs"
  },
  "dependencies": {
    "@mdx-js/react": "^3.0.0",
    "axios": "^1.6.2",
    "next": "^14.0.4",
    "next-mdx-remote": "^6.0.0",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.0",
    "sharp": "^0.33.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "vitest": "^1.1.0"
  }
}
