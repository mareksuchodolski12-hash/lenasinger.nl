NEXT_PUBLIC_EMAIL="booking@yourdomain.com"
NEXT_PUBLIC_INSTAGRAM="@lenavoice"
NEXT_PUBLIC_PHOTO_PORTFOLIO_URL="https://yourdomain.com/gallery"

